<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #121212;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.java_project.chatController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #1e1e1e; -fx-padding: 10; -fx-background-radius: 5;">
                <Button onAction="#handleGoBack" text="← Geri" style="-fx-background-color: #37474f; -fx-text-fill: white;" />
                <Label fx:id="classNameLabel" text="Sınıf Duyuruları" textFill="#f1c40f">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
            </HBox>

            <HBox spacing="10.0" alignment="BOTTOM_CENTER" style="-fx-background-color: #1e1e1e; -fx-padding: 10; -fx-background-radius: 5;">
                <TextArea fx:id="messageArea" prefHeight="60.0" promptText="Mesajınızı yazın..."
                          style="-fx-control-inner-background: #2c2c2c; -fx-text-fill: white; -fx-prompt-text-fill: #888888;"
                          HBox.hgrow="ALWAYS" wrapText="true" />
                <VBox spacing="5" alignment="CENTER">
                    <ComboBox fx:id="typeComboBox" prefWidth="100.0"
                              style="-fx-background-color: #37474f; -fx-text-fill: white;" />
                    <Button onAction="#handleSendMessage" prefHeight="35.0" prefWidth="100.0"
                            style="-fx-background-color: #bb86fc; -fx-font-weight: bold;" text="GÖNDER" textFill="BLACK" />
                </VBox>
            </HBox>

            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        style="-fx-background: #121212; -fx-background-color: #121212; -fx-border-color: #121212;" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="chatContainer" spacing="15.0" style="-fx-padding: 10; -fx-background-color: #121212;" />
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>