<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="650.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java_project.Mid2Controller">
    <children>
        <VBox layoutX="25.0" layoutY="20.0" prefWidth="600.0" spacing="20.0">
            <Label text="Öğretmen Çalışma Alanı" textFill="#bb86fc">
                <font><Font name="System Bold" size="24.0" /></font>
            </Label>

            <HBox spacing="15.0">
                <VBox spacing="8.0" style="-fx-background-color: #1e1e1e; -fx-padding: 15; -fx-background-radius: 12; -fx-border-color: #37474f; -fx-border-radius: 12;" HBox.hgrow="ALWAYS">
                    <Label text="Yeni Sınıf Oluştur" textFill="#03dac6">
                        <font><Font name="System Bold" size="13.0" /></font>
                    </Label>
                    <TextField fx:id="newClassNameField" promptText="Sınıf Adı"
                               style="-fx-background-color: #121212; -fx-text-fill: white; -fx-border-color: #37474f; -fx-prompt-text-fill: #666666; -fx-background-radius: 5;" />
                    <Button maxWidth="Infinity" onAction="#handleCreateClass"
                            style="-fx-background-color: #03dac6; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Sınıf Kur" />
                </VBox>

                <VBox spacing="8.0" style="-fx-background-color: #1e1e1e; -fx-padding: 15; -fx-background-radius: 12; -fx-border-color: #37474f; -fx-border-radius: 12;" HBox.hgrow="ALWAYS">
                    <Label text="Bir Sınıfa Katıl" textFill="#bb86fc">
                        <font><Font name="System Bold" size="13.0" /></font>
                    </Label>
                    <TextField fx:id="classCodeField" promptText="Sınıf Kodu"
                               style="-fx-background-color: #121212; -fx-text-fill: white; -fx-border-color: #37474f; -fx-prompt-text-fill: #666666; -fx-background-radius: 5;" />
                    <Button maxWidth="Infinity" onAction="#handleJoinClass"
                            style="-fx-background-color: #bb86fc; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Kodla Katıl" />
                </VBox>
            </HBox>

            <TabPane prefHeight="300.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS"
                     style="-fx-background-color: transparent;">
                <tabs>
                    <Tab text="Yönettiğim Sınıflar">
                        <ListView fx:id="myCreatedClassesListView"
                                  style="-fx-background-color: #1e1e1e; -fx-control-inner-background: #1e1e1e; -fx-text-fill: white; -fx-border-color: #37474f;" />
                    </Tab>
                    <Tab text="Üyesi Olduğum Sınıflar">
                        <ListView fx:id="joinedClassesListView"
                                  style="-fx-background-color: #1e1e1e; -fx-control-inner-background: #1e1e1e; -fx-text-fill: white; -fx-border-color: #37474f;" />
                    </Tab>
                </tabs>
            </TabPane>

            <HBox spacing="10">
                <Button onAction="#handleGoBack"
                        style="-fx-background-color: #cf6679; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="← Ana Menüye Dön" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>